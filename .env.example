# ==================================================
# CLOUD VEO3 PRO - Environment Variables Template
# ==================================================
# Copy this file to .env.local and fill in your actual API keys.
# NEVER commit real keys to the repository.

# -------------------------------
# Apify API Configuration
# -------------------------------
APIFY_API_KEY=your_apify_api_key_here

# Actor identifiers (names/IDs only, same key used)
APIFY_FACEBOOK_ADS_ACTOR=facebook-ads-actor-id
APIFY_TIKTOK_ADS_ACTOR=tiktok-ads-actor-id
APIFY_YOUTUBE_SHORTS_ACTOR=youtube-shorts-actor-id
APIFY_GOOGLE_CRAWL_ACTOR=google-search-actor-id
APIFY_DATA_CLEANER_ACTOR=data-cleaner-actor-id

# -------------------------------
# Shotstack API Configuration
# -------------------------------
SHOTSTACK_API_KEY=your_shotstack_api_key_here
SHOTSTACK_ENV=sandbox

# -------------------------------
# OpenAI API Configuration
# -------------------------------
OPENAI_API_KEY=sk-your_openai_api_key_here

# -------------------------------
# Sora 2 / Vidgo API
# -------------------------------
SORA_2_API_KEY=your_vidgo_api_key_here
SORA_2_MODEL=sora-2

# -------------------------------
# Mistral AI Configuration (for images only)
# -------------------------------
MISTRAL_API_KEY=your_mistral_api_key_here

# -------------------------------
# Next.js Configuration
# -------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -------------------------------
# Optional: Database (PostgreSQL)
# -------------------------------
# DATABASE_URL=postgresql://user:password@localhost:5432/cloudveo3
# DIRECT_URL=postgresql://user:password@localhost:5432/cloudveo3

# -------------------------------
# Optional: Cloudinary (for video storage)
# -------------------------------
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# -------------------------------
# Optional: withoutBG (Background Removal)
# -------------------------------
WITHOUTBG_API_KEY=your_withoutbg_api_key_here
WITHOUTBG_MODEL=alpha-matte-base64

# -------------------------------
# Optional: RunwayML
# -------------------------------
RUNWAYML_API_SECRET=your_runwayml_api_secret_here

# -------------------------------
# Nano Banana (Fallback Models)
# -------------------------------
NANO_BANANA_MODEL=gpt-image-1.5
NANO_BANANA_EDIT_MODEL=gpt-image-1.5
NANO_BANANA_FALLBACK_MODEL=gpt-image-1.5

# -------------------------------
# Production Overrides (optional)
# -------------------------------
# PRODUCTION_OWNER_ID=your_owner_id
# PRODUCTION_API_KEY=your_production_api_key
